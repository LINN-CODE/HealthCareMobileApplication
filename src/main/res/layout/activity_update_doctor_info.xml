<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".UpdateDoctorInfoActivity">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_background"
        android:contentDescription="@string/background_image_desc" />

    <!-- Profile Picture -->
    <ImageView
        android:id="@+id/profile_picture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/background_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-50dp"
        android:background="@drawable/circle_background"
        android:padding="8dp"
        android:src="@drawable/user"
        android:contentDescription="@string/profile_picture_desc" />

    <!-- User Information Form -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_picture"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        android:orientation="vertical">

        <!-- Name Field -->
        <EditText
            android:id="@+id/editTextDoctorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/name_hint"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext"
            android:inputType="textPersonName"
            android:textColor="@color/text_color"
            android:textColorHint="@color/hint_color" />

        <!-- Email Field -->
        <EditText
            android:id="@+id/editTextDoctorEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email_hint"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext"
            android:inputType="textEmailAddress"
            android:textColor="@color/text_color"
            android:textColorHint="@color/hint_color"
            android:layout_marginTop="12dp" />

        <!-- Phone Field -->
        <EditText
            android:id="@+id/editTextDoctorPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/phone_hint"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext"
            android:inputType="phone"
            android:textColor="@color/text_color"
            android:textColorHint="@color/hint_color"
            android:layout_marginTop="12dp" />

        <!-- Update Button -->
        <Button
            android:id="@+id/buttonUpdateDoctorInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_button"
            android:text="@string/update_button_text"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:padding="16dp" />
    </LinearLayout>

</RelativeLayout>
