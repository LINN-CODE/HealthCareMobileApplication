<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".update_clinic_info">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_background"
        android:contentDescription="@string/background_image_desc" />

    <!-- QR Code Image -->
    <ImageView
        android:id="@+id/qr_code_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/background_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-50dp"
        android:background="@drawable/circle_background"
        android:padding="8dp" />

    <!-- Clinic Information Form -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/qr_code_image"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        android:orientation="vertical">

        <!-- Name Field -->
        <EditText
            android:id="@+id/editTextClinicName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Clinic Name"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext"
            android:inputType="textPersonName"
            android:textColor="@color/text_color"
            android:textColorHint="@color/hint_color" />

        <!-- Email Field -->
        <EditText
            android:id="@+id/editTextClinicEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Clinic Email"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext"
            android:inputType="textEmailAddress"
            android:textColor="@color/text_color"
            android:textColorHint="@color/hint_color"
            android:layout_marginTop="12dp" />

        <!-- Phone Field -->
        <EditText
            android:id="@+id/editTextClinicPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Clinic Phone"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext"
            android:inputType="phone"
            android:textColor="@color/text_color"
            android:textColorHint="@color/hint_color"
            android:layout_marginTop="12dp" />

        <!-- Address Field -->
        <EditText
            android:id="@+id/editTextClinicAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Clinic Address"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext"
            android:inputType="textPostalAddress"
            android:textColor="@color/text_color"
            android:textColorHint="@color/hint_color"
            android:layout_marginTop="12dp" />

        <!-- Update Button -->
        <Button
            android:id="@+id/buttonUpdateClinicInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_button"
            android:text="Update Info"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:padding="16dp" />
    </LinearLayout>

</RelativeLayout>
